<div class="card">
    <div class="card-body">
        <h1 class="card-title">Edit <%= @recipe_ingredient.mixable.name.titleize %></h1>
        <%= form_for(@recipe_ingredient, url: recipe_ingredient_path(@recipe, @recipe_ingredient), method: :patch) do |f| %>
            <div class="row mb-3">
                <div class="col-8">
                    <%= f.label(:amount, class: 'form-label') %>
                    <%= f.number_field(:amount, step: 0.01, class: 'form-control') %>
                </div>
                <div class="col-4">
                    <%= f.label(:units, class: 'form-label') %>
                    <%= f.select(:units, options_for_select(RecipeIngredient.units.map { |k, _v| [k, k] }, @recipe_ingredient.units), {}, class: 'form-select') %>
                </div>
            </div>
            <div class="mb-3">
                <%= f.label(:custom_unit, class: 'form-label') %>
                <%= f.text_field(:custom_unit, class: 'form-control') %>
            </div>
            <div class="mb-3">
                <%= f.label(:note, class: 'form-label') %>
                <%= f.text_field(:note, class: 'form-control') %>
            </div>
            <%= f.submit('Save', class: 'btn btn-primary') %>
            <%= link_to('Remove', recipe_ingredient_path(@recipe, @recipe_ingredient), method: :delete, class: 'btn btn-danger float-end') %>
        <% end %>
    </div>
</div>